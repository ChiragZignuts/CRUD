<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/navbar.ejs') %>
    <div class="container">
      <h1>Update Course</h1>

      <form action="/updateCourse/<%= course.id %>" method="POST">
        <div class="row">
          <div class="col-md-4 p-2">
            <label for="courseName">Course Name</label>
            <input
              type="text"
              class="form-control"
              id="courseName"
              placeholder="Enter Course Name"
              name="courseName"
              value="<%= course.courseName %>"
            />
          </div>
          <div class="col-md-4 p-2">
            <label for="courseDuration">Course Duration</label>
            <input
              type="text"
              class="form-control"
              id="courseDuration"
              placeholder="Enter Course Duration"
              name="courseDuration"
              value="<%= course.courseDuration %>"
            />
          </div>
          <div class="col-md-4 p-2">
            <label>Course Fees</label>
            <input
              type="text"
              class="form-control"
              id="courseFees"
              placeholder="Enter Course Fees"
              name="courseFees"
              value="<%= course.courseFees %>"
            />
          </div>
        </div>

        <div class="row">
          <div class="col">
            <div class="text-center">
              <button
                type="submit"
                onclick="return confirm('Do you wants to update?')"
                class="btn btn-add"
              >
                Update Course
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
